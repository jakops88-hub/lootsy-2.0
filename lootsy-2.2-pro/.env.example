# --- Next.js ---
NEXT_PUBLIC_APP_NAME=Lootsy

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role is ONLY used server-side in server actions / API routes.
SUPABASE_SERVICE_ROLE_KEY=

# Admin email for access to /admin
ADMIN_EMAIL=you@example.com

# Admin secret for /api/admin/import
ADMIN_SECRET=changeme

# --- Stripe (optional; set to enable Checkout) ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID_PREMIUM=
STRIPE_WEBHOOK_SECRET=

# --- Security ---
# Set a long random string (e.g., from `openssl rand -hex 32`)
APP_SECRET=replace_me
